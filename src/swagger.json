{
  "openapi": "3.0.0",
  "info": {
    "title": "RentX Documentation",
    "description": "This is a API Rent",
    "version": "1.0.0",
    "contact": {
      "mail": "raphaelfreire.dias@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": " Create a Category",
        "description": "Create a new Category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Category Name Sample",
                  "description": "Category Description Sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category Already Exists"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "List All Categories",
        "description": "List all the categories created",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import":{
      "post": {
        "tags": ["Category"],
        "summary":" Upload a Category",
        "description": " Upload a New Category",
        "requestBody":{
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            },
            "responses": {
              "201": {
                "description":"Created"
              }
            }
          }
        }
      }
    },
    "/specification":{
      "post":{
        "tags":["Specifications"],
        "summary":"Create a Specification",
        "description":"Create a new Specification",
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/definitions/Specification"
              },
              "example": {
                "name": "Specification name simple",
                "description": "Specification description simple"
              }
            }
          }
        },
        "responses":{
          "201": {
            "description":"Created"
          },
          "500": {
            "description": "Specifications Already Exists"
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "object",
      "properties":{
        "name":{
          "type": "string"
        },
        "description":{
          "type":"string"
        }
      }
    }
  }
}
